@using StaffingPlanner.ViewModels
@model DetailedTeacherViewModel

@{
    ViewBag.Title = "Teacher";
    var editMode = false;
}

<div class="container">
    <div class="modal-header">
        <h4 class="modal-title" style="display:inline-block">Teacher details</h4>
        <div style="float: right; display:inline-block">
            <button class="btn btn-default" type="button" data-dismiss="modal" onclick="location.href='@Url.Action("Teachers", "Teacher")'">Back to Teachers List</button>
            <button class="btn btn-primary" type="button">Edit</button>
        </div>
    </div>
    <div class="modal-body">
        <!--Modal Content-->


        <div class="row well background-white">
            <div class="col-md-6 col-sm-6">
                <div class="table-responsive">
                    <table class="table borderless">
                        <tbody>
                            <tr>
                                <th>Name :</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Email :</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th colspan="2" style="text-align:left">Availability </th>
                            </tr>
                            <tr>
                                <th>Autumn :</th>
                                <td>@Model.FallBudget.TermAvailability%</td>
                            </tr>
                            <tr>
                                <th>Spring :</th>
                                <td>@Model.SpringBudget.TermAvailability%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="hours">
                    <div class="detail-bubble col-md-4 col-sm-4 col-xs-4">
                        <p>total </p>
                        <p class="numbers blue-border">@(Model.FallBudget.TotalTermHours + Model.SpringBudget.TotalTermHours)</p>
                    </div>
                    <div class="detail-bubble col-md-4 col-sm-4 col-xs-4">
                        <p>allocated</p>
                        <p class="numbers green-border">-1</p>
                    </div>
                    <div class="detail-bubble col-md-4 col-sm-4 col-xs-4">
                        <p>balance </p>
                        <p class="numbers orange-border">-1</p>
                    </div>
                </div>

                <h5 class="details-h">Yearly hours by task</h5>
                <div class="time-allocation-div">
                    <div class="time-allocation detail-label">
                        <p class="detail-label">Teaching:</p><span class="badge pull-right">@(Model.FallBudget.TeachingHours + Model.SpringBudget.TeachingHours)</span>
                    </div>
                    <div class="time-allocation detail-label">
                        <p class="detail-label">Research:</p><span class="badge pull-right">@(Model.FallBudget.ResearchHours + Model.SpringBudget.ResearchHours)</span>
                    </div>
                </div>
                <div class="time-allocation-div">
                    <div class="time-allocation detail-label">
                        <p class="detail-label">Other: </p><span class="badge pull-right">@(Model.FallBudget.OtherHours + Model.SpringBudget.OtherHours)</span>
                    </div>
                    <div class="time-allocation detail-label">
                        <p class="detail-label">Admin:</p><span class="badge pull-right">@(Model.FallBudget.AdminHours + Model.SpringBudget.AdminHours)</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!--Table of courses-->
            @if (editMode)
            {

            }
            else
            {
                <div class="col-md-12">
                    <div class="table-responsive" style="font-family: Raleway, sans-serif;">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Responsible</th>
                                <th>Term</th>
                                <th>Period</th>
                                <th>Total budget</th>
                                <th>Total allocated hours</th>
                                <th>@Model.Name hours</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var course in Model.CurrentCourseOfferings)
                            {
                                <tr>
                                    <td><a href="#" data-toggle="modal" data-target="#course-modal">@Html.ActionLink(course.CourseName, "CourseDetails", "Course", new { id = course.Id }, null)</a></td>
                                    <td>@course.Code</td>
                                    <td>@Html.ActionLink(course.CourseResponsible.Name, "TeacherDetails", "Teacher", new { id = course.CourseResponsible.Id }, null)</td>
                                    <td>@course.TermYear.ToString()</td>
                                    <td>@course.Period</td>
                                    <td>@course.TotalHours</td>
                                    <td>@course.AllocatedHours</td>
                                    <td>@course.TeacherAssignedHours</td>
                                    <td><span class="label label-warning pull-right">status </span></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-12">
            <button class="btn btn-primary pull-left" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                View teaching History
            </button>
        </div>
        <!--Course history table-->
        <div class="row">
            <div class="collapse" id="collapseExample">
                @Html.Action("CourseHistory", "Teacher", new { teacherid = Model.Id })
            </div>
        </div>
    </div>
</div>
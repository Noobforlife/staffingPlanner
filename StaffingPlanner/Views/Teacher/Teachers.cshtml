@using StaffingPlanner.ViewModels
@using System.Collections
@model List<SimpleTeacherViewModel>

@{
    ViewBag.Title = "Teachers";
}

<h1>Teachers </h1>
<div class="table-responsive">
    <table class="table table-hover" id="teacherListTable">
        <thead>
            <tr>
                <th>Name </th>
                <th>Title </th>
                <th>Availability HT|VT</th>
                <th>Allocated hours (HT)</th>
                <th>Allocated hours (VT)</th>
                <th>Total remaining hours</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SimpleTeacherViewModel teacher in Model)
            {
                <tr>
                    <td>@Html.ActionLink(teacher.Name, "TeacherDetails", "Teacher", new { id = teacher.Id }, null)</td>
                    <td>@teacher.Title</td>
                    <td>@teacher.FallTermAvailability | @teacher.SpringTermAvailability</td>
                    <td>@teacher.AllocatedHoursFall</td>
                    <td>@teacher.AllocatedHoursSpring</td>
                    <td>@teacher.TotalRemainingHours</td>
                </tr>
            }
        </tbody>
    </table>
</div>

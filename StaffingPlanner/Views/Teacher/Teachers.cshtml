@using StaffingPlanner.ViewModels
@using System.Collections
@model List<TeacherViewModel>

@{
    ViewBag.Title = "Teachers";
}

<h1>Teachers </h1>
<div class="table-responsive">
    <table class="table table-hover" id="teacherListTable">
        <thead>
            <tr>
                <th>Name </th>
                <th>Title </th>
                <th>Total Hours</th>
                <th>HT%</th>
                <th>VT%</th>
                <th>Remaining(Hrs)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TeacherViewModel teacher in Model)
            {
                <tr>
                    <td>@Html.ActionLink(teacher.Name, "TeacherDetails", "Teacher", new { id = teacher.Id }, null)</td>
                    <td>@teacher.Title</td>
                    <td>@teacher.TotalHours</td>
                    <td>@teacher.FallAvailability</td>
                    <td>@teacher.SpringAvailability</td>
                    <td>@teacher.RemainingHours<span class="label label-@teacher.Status pull-right">status </span></td>
                </tr>
            }
        </tbody>
    </table>
</div>

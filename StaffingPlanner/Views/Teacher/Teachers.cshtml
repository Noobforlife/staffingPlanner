@using StaffingPlanner.ViewModels
@using System.Collections
@model List<TeacherViewModel>
@{
    ViewBag.Title = "Teachers";
}

<h1>Teachers </h1>
<div class="table-responsive" style="font-family:Raleway, sans-serif;">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name </th>
                <th>Title </th>
                <th>Total Hours</th>
                <th>HT work</th>
                <th>VT work</th>
                <th>Remaining(Hrs)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TeacherViewModel teacher in Model)
            {
                <tr>
                    <td>@Html.ActionLink(teacher.Name, "TeacherDetails", "Teacher", new { id = teacher.Id }, null)</td>
                    <td>@teacher.Title</td>
                    <td>@teacher.TotalHours</td>
                    <td>@teacher.FallWork</td>
                    <td>@teacher.SpringWork</td>
                    <td>@teacher.RemainingHours<span class="label label-success pull-right">good </span></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@using StaffingPlanner.Models;
@model Tuple<List<Teacher>, Guid>
<div class="modal-dialog" role="document">
@using (Html.BeginForm("SaveNewTeacher", "Course", FormMethod.Post))
{
    <div class="modal-content flat" style=" width: 100%">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Add Teacher to Course</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="Id" name="Id" value="@Model.Item2">
            <div class="form-group">
                <label for="teacher">Select Teacher to Add:  </label>
                <select id="teacherId" name="teacherId" data-style="btn-primary" class="teacher-selector flat-border" style="margin-left: 15px; width: 300px; height: 30px">
                    @foreach (var teacher in Model.Item1)
                    {
                        <option value="@teacher.Id">@teacher.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Allocated">Allocate Teaching Hours:  </label>
                <input type="number" id="Allocated" name="Allocated" data-style="btn-primary" value="0" style="margin-left: 15px; width: 100px; height: 30px" />
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary clear-button" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary solid-button">Add Teacher</button>
        </div>
    </div>
}    
</div>
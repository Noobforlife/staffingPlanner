@using StaffingPlanner.ViewModels;
@model DetailedCourseViewModel
@{
    ViewBag.Title = "Course details";
}

<div class="container">
    <div class="modal-header">
        <h4 class="modal-title" style="display:inline-block">Course details</h4>
        <div style="float: right; display:inline-block">
            <button class="btn btn-default" type="button" data-dismiss="modal" onclick="location.href='@Url.Action("Courses", "Course")'">Back to Course List</button>
            <button class="btn btn-primary" onclick="EditCourse(this)" type="button" id="EditcourseButton">Edit</button>
        </div>        
    </div>
    <div class="modal-body">
        <div id ="courseDetails" class="row well background-white">
            @Html.Partial("_courseDetailsTop", Model)
        </div>        
        <div class="row">
            @Html.Action("RenderTeacherList", "Course", new { Courseid = Model.Id})
        </div>

        <!--Course history table-->
        <div class="row">
            </p>
            <div class="collapse" id="collapseExample">
                @Html.Action("RenderCourseHistory", "Course", new { courseid = Model.Id })
            </div>
        </div>
    </div>
    <script>
        function EditCourse(evt) {
            $('#courseDetails').load('@Url.Action("EditCourse", "Course", new { course = Model.Id})');
        }       
    </script>
</div>

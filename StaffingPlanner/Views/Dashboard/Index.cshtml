@using StaffingPlanner.ViewModels;
@model Tuple<List<DashboardViewModel>, List<DashboardViewModel>>
@{
    ViewBag.Title = "Dashboard";
}

<div class="row">
    <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
        <div class="statistic"></div>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
        <div class="statistic"></div>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
        <div class="statistic"></div>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
        <div class="statistic"></div>
    </div>
</div>
<div class="row year-plan">
    <div class="col-md-12">
        <div class="dropdown pull-right">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false" type="button">2017/2018 <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
                <li role="presentation"><a href="#">2016/2017</a></li>
                <li role="presentation"><a href="#">2016/2015</a></li>
                <li role="presentation"><a href="#">2015/2014</a></li>
            </ul>
        </div>
        <div style="font-family:Raleway, sans-serif;">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab-1" role="tab" data-toggle="tab">Fall</a></li>
                <li><a href="#tab-2" role="tab" data-toggle="tab">Spring</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" role="tabpanel" id="tab-1">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="text-align: center;">Period 1</th>
                                    <th style="text-align: center;">Period 2</th>
                                    <th style="text-align: center;">Period 3</th>
                                    <th style="text-align: center;">Period 4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Item1)
                                {
                                    <tr>
                                        @for (var i = 0; i < item.PeriodsBefore; i++)
                                        {
                                            <td></td>
                                        }   
                                        <td colspan=@item.PeriodsDuration>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">@item.Name</div>
                                            </div>
                                        </td>
                                        @for (var i = 0; i < item.PeriodsAfter; i++)
                                        {
                                            <td></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" role="tabpanel" id="tab-2">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="text-align: center;">Period 1</th>
                                    <th style="text-align: center;">Period 2</th>
                                    <th style="text-align: center;">Period 3</th>
                                    <th style="text-align: center;">Period 4</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Item2)
                            {
                                <tr>
                                    @for (var i = 0; i < item.PeriodsBefore; i++)
                                    {
                                        <td></td>
                                    }   
                                    <td colspan=@("" + item.PeriodsDuration)>
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">@item.Name</div>
                                        </div>
                                    </td>
                                    @for (var i = 0; i < item.PeriodsAfter; i++)
                                    {
                                        <td></td>
                                    }
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
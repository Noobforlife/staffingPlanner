@using StaffingPlanner.ViewModels;
@model DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}

@if (Model.DoS)
{
    <div class="row well background-white">
        <h4 style="margin-left: 15px;">Remaining hours</h4>
        <div>
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-grey"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Total</div>
                        <div class="capsule-bottom">@Model.TopPanel.TotalRemaining</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-blue"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Completion</div>
                        <div class="capsule-bottom">65%</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-green"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Courses Done</div>
                        <div class="capsule-bottom">30</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-orange"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Incomplete</div>
                        <div class="capsule-bottom">16</div>
                    </div>
                </div>
            </div>
        </div>
        <div style="margin-bottom: 30px;">
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-grey"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Total Courses</div>
                        <div class="capsule-bottom">46</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-blue"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Completion</div>
                        <div class="capsule-bottom">65%</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-green"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Courses Done</div>
                        <div class="capsule-bottom">30</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 statictic-container">
                <div class="statistic">
                    <div class="capsule-side background-orange"></div>
                    <div class="capsule-content">
                        <div class="capsule-top">Incomplete</div>
                        <div class="capsule-bottom">16</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row year-plan">
    <div class="col-md-12">
        <div class="dropdown pull-right">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false" type="button">2017/2018 <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
                <li role="presentation"><a href="#">2016/2017</a></li>
                <li role="presentation"><a href="#">2016/2015</a></li>
                <li role="presentation"><a href="#">2015/2014</a></li>
            </ul>
        </div>
        <div>
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab-1" role="tab" data-toggle="tab">Fall</a></li>
                <li><a href="#tab-2" role="tab" data-toggle="tab">Spring</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" role="tabpanel" id="tab-1">
                    <div class="table-responsive">
                        <table class="table borderless">
                            <colgroup>
                                <col class="period-col">
                                <col class="period-col">
                                <col class="period-col">
                                <col class="period-col">
                            </colgroup>
                            <thead>
                                <tr style=" border-bottom: 2px solid #000000; border-top: 0px">
                                    <th style="text-align: center;">Period 1</th>
                                    <th style="text-align: center;">Period 2</th>
                                    <th style="text-align: center;">Period 3</th>
                                    <th style="text-align: center;">Period 4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.FallCourses)
                                {
                                    <tr>
                                        @for (var i = 0; i < item.PeriodsBefore; i++)
                                        {
                                            <td></td>
}
                                        <td colspan=@item.PeriodsDuration>
                                            <div class="progress">
                                                <a class="progress-bar progress-bar-@item.Status" role="button" data-toggle="popover" data-placement="top" title="Course responsible" data-content="@item.CourseResponsible.Name" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">@item.Name</a>
                                            </div>
                                        </td>
                                        @for (var i = 0; i < item.PeriodsAfter; i++)
                                        {
                                            <td></td>
}
                                    </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" role="tabpanel" id="tab-2">
                    <div class="table-responsive">
                        <table class="table borderless">
                            <colgroup>
                                <col class="period-col">
                                <col class="period-col">
                                <col class="period-col">
                                <col class="period-col">
                            </colgroup>
                            <thead>
                                <tr style=" border-bottom: 2px solid #000000; border-top: 0px">
                                    <th style="text-align: center;">Period 1</th>
                                    <th style="text-align: center;">Period 2</th>
                                    <th style="text-align: center;">Period 3</th>
                                    <th style="text-align: center;">Period 4</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SpringCourses)
                                {
                                    <tr>
                                        @for (var i = 0; i < item.PeriodsBefore; i++)
                                        {
                                            <td></td>
}
                                        <td colspan=@("" + item.PeriodsDuration)>
                                            <div class="progress">
                                                <a class="progress-bar progress-bar-@item.Status" role="button" data-toggle="popover" data-placement="top" title="Course responsible" data-content="@item.CourseResponsible.Name" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">@item.Name</a>
                                            </div>
                                        </td>
                                        @for (var i = 0; i < item.PeriodsAfter; i++)
                                        {
                                            <td></td>
}
                                    </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
